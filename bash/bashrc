#!/usr/bin/env bash

# [[ $- == *i* ]] -> Run only when being interactive
[[ $- == *i* ]] && source ~/.config/bash/prompt
[[ $- == *i* ]] && source ~/.config/bash/colors

source ~/.config/bash/constants
source ~/.config/bash/aliases
source ~/.config/bash/defaults

source ~/.config/bash/paths
source ~/.config/bash/functions

#source ~/dotfiles/wm/utilities/others
source ~/dotfiles/wm/power

#source "${HOME}/.bash_funcs"

[[ $- == *i* ]] && ~/.config/bash/message